<section class="shop-categories">

<h2> {{ __('Category', 'my') }} </h2>

<h-tile class="tile-3 small-tile-2">
  {% for c in categories %}
  
  <a class="category-tease" href="{{ c.link }}">
    <figure>
      <img src="{{ c.image }}" alt="{{ c.name }} Thumbnail">
    </figure>
    <h3>{{ c.name }} ({{ c.category_count }})</h3>
  </a>

  {% endfor %}
</h-tile>

</section>
