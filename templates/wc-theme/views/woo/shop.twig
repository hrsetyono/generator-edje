{% extends "layout.twig" %}
{% block content %}

<section class="shop-title">
  <h-row><h-column class="large-8">
    <h1>{{ title }}</h1>
    {{ content }}
  </h-column></h-row>
</section>

<h-row><h-column class="large-12">
  {% do action("woocommerce_before_main_content") %}

  {% if categories %}
    {% include "woo/_categories.twig" with { categories: categories } %}
  {% endif %}

  <section class="shop-before-products">
    {% do action("woocommerce_before_shop_loop") %}
  </section>

  {% if products %}
    {% include "woo/_products.twig" with { products: products } %}
  {% endif %}

  {% do action("woocommerce_after_shop_loop") %}
  {% do action("woocommerce_after_main_content") %}

</h-column></h-row>

{% endblock %}
