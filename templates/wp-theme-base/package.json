{
  "name": "my-theme",
  "private": true,
  "edje": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/my-theme.git"
  },
  "dependencies": {},
  "devDependencies": {},
  "scripts": {
    "sass": "FOR /f \"delims=\" %v IN ('node -p \"require('edje').includePaths()[0]\"') DO node-sass -w assets/sass -o assets/css --output-style compressed --include-path \"%v\" ",
    "sass-mac": "node-sass -w assets/sass -o assets/css --include-paths $(node -p \"require('edje').includePaths()\")",
    "remote-debug": "browser-sync start --proxy \"mysite.dev\" --files 'css/*.css/js/*.js'"
  }
}
