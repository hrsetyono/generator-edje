{% for post in posts %}

  {# Featured Post #}
  {% if loop.first and post.thumbnail %}
    <article class="post-banner post-banner-mini" style="background-image: url('{{ post.thumbnail.src('large') }}');">
      <h-row class="post-row"><h-column>

        {% include "partials/_post-meta.twig" %}
        <a href="{{ post.link }}" class="banner-body">
          <h1>{{ post.title }}</h1>

          {{ post.get_preview(25, false, false) | wpautop }}

          <span class="button-line">Read More</span>
        </a>

      </h-column></h-row>
    </article>

  {# Standard List #}
  {% else %}

    <article class="post-tease">

      {% if post.thumbnail %}
      <figure>
        <img src="{{ post.thumbnail.src('thumbnail') }}" alt="{{ post.title }}">
      </figure>
      {% endif %}

      <div class="tease-body">
        <a href="{{ post.link }}">
          <h3>{{ post.title }}</h3>
          <p> {{ post.get_preview(25, false, false) }} </p>
        </a>

        {% include "partials/_post-meta.twig" %}
      </div>

    </article>
  {% endif %}

{% else %}
  <article class="content-error">
    <h1>Sorry</h1>
    <p>We couldnâ€™t find any posts.</p>
  </article>
{% endfor %}
