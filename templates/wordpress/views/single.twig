{% extends "layout.twig" %}
{% block content %}

{# Banner #}
{% if post.thumbnail %}
<section class="post-banner {{ post.thumbnail.width < 1280 ? 'post-banner-mini' : '' }}"
  style="background-image: url('{{ post.thumbnail.src('large') }}');">
</section>
{% endif %}

{# Content #}
<article class="post-content">
<h-row class="post-row"><h-column class="post-col">

  <header class="post-header">
    <h1>{{ post.title }}</h1>

    <div class="post-meta">
      {% include "partials/_post-meta.twig" %}
    </div>
  </header>

  <section class="post-body">
    {{ post.content }}
  </section>

  {# Author #}
  <footer class="post-author">

    <figure class="author-image">
      <img src="{{ post.author.avatar }}" alt="{{ post.author.display_name }}">
    </figure>

    <div class="author-bio">
      <h6><a href="{{ post.author.link }}" title="See all posts by {{ post.author.display_name }}">
        {{ post.author.display_name }}
      </a></h6>
      <p>{{ post.author.description }}</p>
    </div>

    {% if post.author.user_url %}
      <a href="{{ post.author.user_url }}" target="_blank" class="post-button">Follow</a>
    {% endif %}

  </footer>

</h-column></h-row>
</article>


<section class="post-footer">
<h-row class="post-row"><h-column class="post-col">

  {# Suggestion #}
  <div class="post-suggest">
  <h-row>
    {% if post.next %}
      <h-column class="suggest-col">
        <a href="{{ post.next.link }}">
          <div class="suggest-item" style="background-image: url('{{ post.next.thumbnail.src('medium') }}');">
            <div class="post-tip"><span>Read this next</span></div>
            <article>
              <h5>{{ post.next.title }}</h5>
            </article>
          </div>
        </a>
      </h-column>
    {% endif %}

    {% if post.prev %}
      <h-column class="suggest-col">
        <a href="{{ post.prev.link }}">
          <div class="suggest-item" style="background-image: url('{{ post.prev.thumbnail.src('medium') }}');">
            <div class="post-tip"><span>You might enjoy</span></div>
            <article>
              <h5>{{ post.prev.title }}</h5>
            </article>
          </div>
        </a>
      </h-column>
    {% endif %}
  </h-row>
  </div>

  {# Comments #}
  {% include "partials/_comments.twig" %}

</h-column></h-row>
</section>


{% endblock %}
