{% for post in posts %}
<article class="post-tease post-content">

  {% if post.thumbnail %}
  <figure>
    <img src="{{ post.thumbnail.src('thumbnail') }}" alt="{{ post.title }}">
  </figure>
  {% endif %}

  <div class="tease-body">
    <a href="{{ post.link }}">
      <h3>{{ post.title }}</h3>
      <p> {{ post.get_preview(25, false, false) }} </p>
    </a>

    <footer class="tease-meta">
      {% include "partials/_post-meta.twig" %}
    </footer>
  </div>

</article>


{% else %}
  <article class="post-content content-error">
    <h1>Sorry</h1>
    <p>We couldnâ€™t find any posts.</p>
  </article>
{% endfor %}
