<div class="post-meta">
  <a class="meta-category" href="{{ post.categories[0].link }}">{{ post.categories[0].name }}</a>
  by <a class="meta-author" href="{{ post.author.link }}">{{ post.author.display_name }}</a>

  <time datetime="{{ post.post_date | date('Y-m-d') }}">
    {{ post.post_date | date }}
  </time>
</div>
